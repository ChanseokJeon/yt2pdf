{
  "name": "yt2pdf",
  "version": "0.2.0",
  "description": "YouTube 영상의 자막과 스크린샷을 추출하여 PDF로 변환하는 CLI 도구",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yt2pdf": "./dist/bin/yt2pdf.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/bin/yt2pdf.ts",
    "start": "node dist/bin/yt2pdf.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:char": "jest tests/characterization --passWithNoTests",
    "test:golden": "jest tests/golden-master --passWithNoTests",
    "test:contract": "jest tests/contracts --passWithNoTests",
    "test:perf": "jest tests/performance --passWithNoTests",
    "test:visual": "jest tests/visual --passWithNoTests --testTimeout=60000",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "benchmark": "node scripts/benchmark.js",
    "benchmark:baseline": "node scripts/benchmark.js --save",
    "benchmark:compare": "node scripts/benchmark.js --compare",
    "depcruise": "depcruise src --config .dependency-cruiser.js",
    "depcruise:validate": "depcruise src --config .dependency-cruiser.js --output-type err-long",
    "verify:all": "npm run build && npm test && npm run lint && npm run depcruise:validate",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "setup": "bash scripts/setup.sh"
  },
  "keywords": [
    "youtube",
    "pdf",
    "subtitle",
    "screenshot",
    "converter",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^0.19.10",
    "@hono/zod-validator": "^0.7.6",
    "@scalar/hono-api-reference": "^0.9.40",
    "bullmq": "^5.67.2",
    "chalk": "^5.3.0",
    "chroma-js": "^3.2.0",
    "claude": "^0.1.1",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "hono": "^4.11.7",
    "inquirer": "^9.2.12",
    "ioredis": "^5.9.2",
    "marked": "^11.1.0",
    "node-vibrant": "^4.0.4",
    "openai": "^4.24.1",
    "ora": "^7.0.1",
    "p-limit": "^5.0.0",
    "p-retry": "^6.2.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.14.0",
    "puppeteer": "^24.36.1",
    "uuid": "^13.0.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chroma-js": "^3.1.2",
    "@types/cli-progress": "^3.11.5",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/jest-image-snapshot": "^6.4.1",
    "@types/node": "^20.10.6",
    "@types/pdfkit": "^0.13.3",
    "@types/puppeteer": "^5.4.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dependency-cruiser": "^17.3.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-image-snapshot": "^6.5.1",
    "pdf-parse": "^2.4.5",
    "pdf2pic": "^3.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@aws-sdk/client-sqs": "^3.980.0",
    "@aws-sdk/s3-request-presigner": "^3.980.0",
    "@google-cloud/storage": "^7.0.0"
  }
}
